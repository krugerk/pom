pom=1;while :;do for t in {5,25};do printf "(pom #%d) %s starting at %s --> " "$pom" `[ $t -eq 25 ] && echo "session" || echo "break"` `date +"%H:%M"`; if [ $t -eq 25 ]; then osascript -e 'display alert "pom starts"' &> /dev/null; else osascript -e 'display alert "pom break"' &> /dev/null; fi; sleep $(($t*1)); printf '\n'; done; ((pom++)); done
